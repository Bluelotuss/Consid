@model ConsidSite.Models.ViewModels.CompanyIndexViewModel
@{
    ViewData["Title"] = "Companies manager";
}

<h3>Companies index</h3>

<p>
    <a asp-action="Create">Create new company</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h3>Name</h3>
            </th>
            <th>
                <h3>Organization number</h3>
            </th>
            <th>
                <h3>Notes</h3>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CompanyList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrganizationNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>